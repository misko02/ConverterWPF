<Window x:Class="WPFConverter.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFConverter.Views"
        mc:Ignorable="d" 
        Title="Converter" Height="450" Width="800">
    <Border Background="LightGray" BorderBrush="Black" BorderThickness="1"  CornerRadius="0"  Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <TextBox x:Name="InputVal" Grid.Row="0" Grid.Column="0" Width="240" Height="30"/>
            <ComboBox x:Name="OptionsFrom" Grid.Row="1" Grid.Column="0" Width="200" Height="30">
                <ComboBoxItem Content="Dec"/>
                <ComboBoxItem Content="Bin"/>
                <ComboBoxItem Content="Oct"/>
                <ComboBoxItem Content="Hex"/>
                <ComboBoxItem Content="Ascii"/>
            </ComboBox>

            <Button x:Name="Submit" Grid.Row="1" Grid.Column="1" Content="CONVERT" Margin="30"/>

            <TextBox x:Name="OutputVal" Grid.Row="0" Grid.Column="2" Width="240" Height="30" IsEnabled="False" />
            <ComboBox x:Name="OptionsTo" Grid.Row="1" Grid.Column="2" Width="200" Height="30">
                <ComboBoxItem Content="Dec"/>
                <ComboBoxItem Content="Bin"/>
                <ComboBoxItem Content="Oct"/>
                <ComboBoxItem Content="Hex"/>
                <ComboBoxItem Content="Ascii"/>
            </ComboBox>

        </Grid>

    </Border>
</Window>
